<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Chuck Norris</title>
</head>

<body>
  <div class='container'>
    <h1>Chuck Norris <spam>Jokes</spam></h1>
    <h2>Categories</h2>
    <ul>
      <li><a href='/jokes'>all</a></li>
      <% categories.forEach((category)=> { %>
        <li><a href="<%= `/jokes/${category}` %>"><%= category %></a></li>
      <% }) %>
    </ul>
  </div>
</body>

<style>
  spam {
    color: orangered
  }

  a {
    background-color: orangered;
    border-radius: 4px;
    border: 1px solid black;
    color: white;
    font-size: 20;
    padding: 3px 8px;
    text-decoration: none;
  }

  li {
    list-style: none;
    margin: 5px;
  }

  ul {
    display: flex;
    flex-wrap: wrap;
  }

  .container {
    align-items: center;
    display: flex;
    flex-direction: column;
    margin: auto;
    position: relative;
    width: 40vw;
  }

  h1 {
    font-size: 3em;
    margin-block-end: 0;
    margin-block-start: 0.2em;
  }

  h2 {
    font-size: 2em;
    margin-block-end: 0;
    margin-block-start: 0.5em;
  }
</style>

</html>
